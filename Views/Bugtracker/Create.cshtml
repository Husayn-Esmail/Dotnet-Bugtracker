@model bugtracker.Models.Issue

@{
    ViewData["Title"] = "Create";
    ViewData["styles"] = "~/css/bugtracker-create.css";
}

<h1 class="title">Create</h1>

<h4 class="subheading">Issue</h4>
<hr />
<div class="row form">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Title" class="text-input input-box" placeholder="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Description" type="text" class="text-input description-box input-box" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Priority" class="form-control select-box">
                    <option value="high">High</option>
                    <option value="medium">Medium</option>
                    <option value="low">Low</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IssueType" class="text-input input-box" placeholder="IssueType" />
                <span asp-validation-for="IssueType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastModifiedBy" class="text-input input-box" placeholder="Last Modified By"/>
                <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="form-group buttons">
                <a class="button" asp-action="Index">Back to List</a> 
                <input type="submit" value="Create" class="button" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
