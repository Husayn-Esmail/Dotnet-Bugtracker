@model bugtracker.Models.Issue

@{
    ViewData["Title"] = "Create";
    ViewData["styles"] = "~/css/bugtracker-create.css";
}

<h1>Create</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* <label asp-for="Title" class="control-label"></label> *@
                <input asp-for="Title" class="text-input" placeholder="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="Description" class="control-label"></label> *@
                <input asp-for="Description" class="text-input" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="Priority" class="control-label"></label> *@
                @* <input asp-for="Priority" class="text-input" placeholder="Priority" /> *@
                <select asp-for="Priority" class="form-control">
                    <option value="high">High</option>
                    <option value="medium">Medium</option>
                    <option value="low">Low</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* <label asp-for="IssueType" class="control-label"></label> *@
                <input asp-for="IssueType" class="text-input" placeholder="IssueType" />
                <span asp-validation-for="IssueType" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
                @* <label asp-for="DateTimeCreated" class="control-label"></label> *@
                @* <input asp-for="DateTimeCreated" class="text-input" placeholder="Created" />
                <span asp-validation-for="DateTimeCreated" class="text-danger"></span>
            </div>
            <div class="form-group"> *@
                @* <label asp-for="DateTimeModifed" class="control-label"></label> *@
                @* <input asp-for="DateTimeModifed" class="text-input" placeholder="Modified"/>
                <span asp-validation-for="DateTimeModifed" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                @* <label asp-for="LastModifiedBy" class="control-label"></label> *@
                <input asp-for="LastModifiedBy" class="text-input" placeholder="Last Modified By"/>
                <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a class="button" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
